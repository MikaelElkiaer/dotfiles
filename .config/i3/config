# bindsym $mod+F3 exec ranger
bindsym Print exec --no-startup-id i3-scrot
bindsym Ctrl+Print --release exec --no-startup-id "cd ~/Pictures && scrot -a $(slop -f '%x,%y,%w,%h') -e 'xclip -selection clipboard -t image/png -i $f'"

bindsym $mod+Ctrl+Shift+w mode "$kill_service"
set $kill_service kill service: (i)3, (c)onfig, (d)unst, (p)icom, i3-(w)arp-mouse
mode "$kill_service" {
    bindsym i restart, mode "default"
    bindsym c reload, mode "default"
    bindsym p exec "killall picom; picom", mode "default"
    bindsym d exec "killall dunst; exec notify-send 'restart dunst'", mode "default"
    bindsym w exec "killall i3-warp-mouse; i3-warp-mouse", mode "default"
    bindsym q mode "default"
    bindsym Escape mode "default"
}

# drop down terminal
