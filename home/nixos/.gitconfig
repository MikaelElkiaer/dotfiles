  email = 2102306+MikaelElkiaer@users.noreply.github.com
# INFO: Allow for local overrides
# The file is not created by default.
# It can be created and then used for additional `includeIf` blocks.
# See below for examples.
[include]
	path = ~/.override.gitconfig
[includeIf "gitdir:**/Repositories/GitHub/**"]
	path = ~/.github.gitconfig
[includeIf "gitdir:**/Repositories/AUR/**"]
	path = ~/.aur.gitconfig
[core]
	autocrlf = input
	pager = delta
[interactive]
	diffFilter = delta --color-only
[rebase]
	autosquash = true
[pull]
	rebase = true
[merge]
	ff = false
[push]
	default = current
[alias]
	sprune = !"git fetch -p && for branch in `git branch -vv | grep ': gone]' | awk '{print $1}'`; do git branch -D $branch; done"
	oclean = !"find -type f -name *.orig -print0 | xargs -0 rm -f"
[color]
	ui = auto
[advice]
  addIgnoredFile = false
[init]
	defaultBranch = main
[credential]
	helper = 
	helper = store
[credential "https://github.com"]
	helper = 
	helper = !$HOME/.nix-profile/bin/gh auth git-credential
[credential "https://gist.github.com"]
	helper = 
	helper = !$HOME/.nix-profile/bin/gh auth git-credential
