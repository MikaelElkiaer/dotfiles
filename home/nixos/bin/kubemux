#!/usr/bin/env bash

export KUBECONFIG="$HOME/.kube/config-tmux-$1"
RESULT=""
if CONTEXT="$(kubectl config current-context)"; then
  RESULT="#[fg=colour13] ó±ƒ¾ $CONTEXT#[fg=default]"
fi
if NAMESPACE="$(
  kubectl config view --minify --output jsonpath='{..namespace}'
  echo
)" && [ -n "$NAMESPACE" ]; then
  RESULT="$RESULT(${NAMESPACE})"
fi
if [ -n "$RESULT" ]; then
  echo "$RESULT"
fi
