#!/usr/bin/env bash

set -euo pipefail

function main() {
  WINDOW_ID="$1"
  WINDOW_INDEX="${2-}"

  mapfile -t PANES < <(tmux list-panes -F "#{pane_current_command};#{pane_current_path};#{pane_title};#{pane_active}" -t "$WINDOW_ID")

  local ACTIVE_PATH RESULT
  for P in "${PANES[@]}"; do
    local FORMAT=""
    IFS=$';' read -r APP _PATH TITLE ACTIVE <<<"$P"
    if [ "$ACTIVE" == "1" ]; then
      if [ "$APP" == "ssh" ]; then
        local _TITLE
        _TITLE="${TITLE%:*}"
        _TITLE="${_TITLE#*@}"
        ACTIVE_PATH="$_TITLE"
      elif [ "$_PATH" == "$HOME" ]; then
        ACTIVE_PATH="~"
      else
        ACTIVE_PATH="$(basename "$_PATH")"
      fi
      FORMAT+="${NOFORMAT-#[fg=blue]}"
    fi
    FORMAT+="$(get_app_icon "$APP")"
    FORMAT+=" "
    FORMAT+="${NOFORMAT-#[fg=default]}"
    RESULT+="$FORMAT"
  done

  KUBECTX="$(NOICON="" kubemux "$WINDOW_ID")"
  if [ "$ACTIVE_PATH" = "~" ] && [ -n "$KUBECTX" ]; then
    RESULT+="${NOFORMAT-#[fg=colour13]}"
    RESULT+="$(shortname "$KUBECTX")"
    RESULT+="${NOFORMAT-#[fg=default]}"
  else
    RESULT+="$(shortname "$ACTIVE_PATH")"
  fi

  if [ -n "$WINDOW_INDEX" ]; then
    RESULT+="$(superscript "$WINDOW_INDEX")"
  fi
  echo "$RESULT"
}

function get_app_icon() {
  case "$1" in
  "bash" | "sh")
    echo ""
    ;;
  "k9s")
    echo "󱃾"
    ;;
  "nvim")
    echo ""
    ;;
  "ssh")
    echo "󰍹"
    ;;
  *)
    echo " "
    ;;
  esac
}

main "$@"
