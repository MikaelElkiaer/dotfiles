#!/usr/bin/env bash

set -Eeuo pipefail

OUTPUT="ï€£"
for f in ~/.local/state/login-status-*; do
  [ -e "$f" ] || continue
  STATUS=$(<"$f")
  if [ "$STATUS" -eq 0 ]; then
    PROVIDER=$(basename "$f" | sed 's/login-status-//')
    OUTPUT+=" #[fg=green]${PROVIDER}#[fg=default]"
  else
    PROVIDER=$(basename "$f" | sed 's/login-status-//')
    OUTPUT+=" #[fg=red]${PROVIDER}#[fg=default]"
  fi
done

echo "$OUTPUT"
