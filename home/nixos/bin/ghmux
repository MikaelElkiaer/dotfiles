#!/usr/bin/env bash

set -euo pipefail

if [ -s "$HOME/.local/state/gh-notification-counter" ]; then
  RESULT=" î®¡ "
  COUNT=$(<"$HOME/.local/state/gh-notification-counter")
  if [ "$COUNT" -gt 0 ]; then
    RESULT+="#[fg=red]"
  else
    RESULT+="#[fg=green]"
  fi
  RESULT+="$COUNT"

  echo "$RESULT"
fi
